        private void generateComboBoxSortItem()
        {

            cmbSort.Items.Add(new ComboBoxItem { Content = "Kode Grade", Name = "KODE_GRADE", IsSelected = true });
            cmbSort.Items.Add(new ComboBoxItem { Content = "Nilai Grade", Name = "NILAI_GRADE" });
        }
        private void generateColumdgGrade(int page, int jumData)
        {

            dgGrade.Columns.Add(new DataGridTextColumn { Header = "Kode", Binding = new Binding("KODE_GRADE"), DisplayIndex = 0 });
            dgGrade.Columns.Add(new DataGridTextColumn { Header = "Nilai Grade", Binding = new Binding("NILAI_GRADE"), DisplayIndex = 1 });

            generateDatadgGrade(page, jumData, (cmbSort.SelectedItem as ComboBoxItem).Name.ToString());

        }
        private void generateDatadgGrade(int page, int jumData, string orderBy)
        {

            int pageTemp = (page * jumData) + 1;
            int rangePage = (page + 1) * jumData;
            int halaman = page + 1;

            string queryTemp = queryGrid.getQueryGrade(orderBy, AriLib.orderBy(asc));
            string queryCountTemp = queryGrid.getQueryCOuntGrade;
            List<string> jumlah = con.getDataFromDatabase(queryCountTemp);
            if (Int32.Parse(jumlah[0]) > 0)
            {
                string queryPaging = AriLib.createPaging(queryTemp, pageTemp, rangePage, jumData, isSqlServer);

                json = js.generateDataGridJson(queryPaging, jumlah[0]);

                var data = JsonConvert.DeserializeObject<dataGrade>(json);
                if (data.rows.Count > 0)
                {
                    dgGrade.Items.Clear();
                    for (int i = 0; i < data.rows.Count; i++)
                    {
                        dgGrade.Items.Add(new dataDetailGrade { KODE_GRADE=data.rows[i].KODE_GRADE,NILAI_GRADE= data.rows[i].NILAI_GRADE });

                    }

                }
                AllDataGrid = Convert.ToInt32(jumlah[0]);
                dari.Text = pageTemp.ToString();
                sampai.Text = rangePage.ToString();
                total.Text = (Convert.ToInt32(jumlah[0].ToString()) - 1).ToString();
                cekbntPage(Convert.ToInt32(total.Text), jumData, halaman);
            }
            else
            {
                dgGrade.Items.Clear();
                AllDataGrid = 0;
                dari.Text = "0";
                sampai.Text = "0";
                total.Text = "0";
                cekbntPage(Convert.ToInt32(total.Text), jumData, halaman);
            }


        }

        private void cekbntPage(int totaldata, int jumData, int halaman)
        {
            if (totaldata != 0)
            {
                if (dari.Text == "1")
                {
                    firstPage.IsEnabled = false;
                    prevPage.IsEnabled = false;
                }
                else
                {
                    firstPage.IsEnabled = true;
                    prevPage.IsEnabled = true;
                }
                float tem = totaldata / jumData;
                if (totaldata % jumData > 0)
                {
                    tem += 1;
                }

                if (tem == halaman)
                {
                    nextPage.IsEnabled = false;
                    lastPage.IsEnabled = false;
                }
                else
                {
                    nextPage.IsEnabled = true;
                    lastPage.IsEnabled = true;
                }

            }
            else
            {
                nextPage.IsEnabled = false;
                lastPage.IsEnabled = false;
                firstPage.IsEnabled = false;
                prevPage.IsEnabled = false;
            }

        }
